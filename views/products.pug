extends layout

block main
  
  section.articles
    h3  Estos son nuestros Cupcakes
    //- articles to create dinamicly
    .row
      each product in products
        if (product.category === section)
          .col-sm-6.col-md-4
            .thumbnail
              a(href=`/products/details/${product.id}`)
               img(src='/img/cup-nutella.jpg', alt='...')

              .caption
                h3=product.title
                  
                p.itemReviews
                  span.badge
                    | 42 
                  | Opiniones  
                  span.fa.fa-star.checked
                  span.fa.fa-star.checked
                  span.fa.fa-star.checked
                  span.fa.fa-star
                  span.fa.fa-star
                a.btn.btn-default.col-xs-12(href=`/products/details/${product.id}`, role='button') Ver detalles
                .col-xs-9.selector
                  p Selecciona un pack
                  p
                    select.selectpicker
                      option 6 cupcakes
                      option 12 cupcakes
                      option 18 cupcakes
                .col-xs-3.price
                  p Total
                  p
                    span €3.00
                a.btn.btn-primary.col-xs-12(href='#', role='button') Añadir al carrito
                hr
